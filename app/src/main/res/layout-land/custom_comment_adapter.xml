<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content">-->
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="25, October 2015"/>-->
    <!--</LinearLayout>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal" >

        <!-- ListRow Left sied Thumbnail image @drawable/list_selector -->

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="#fff">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/custom_comment_dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/avatar_default"
                android:layout_gravity="center_vertical"
                app:civ_border_width="1dp"
                app:civ_border_color="#00796b"/>
        </LinearLayout>

        <!-- Title Of Song -->

        <TextView
            android:id="@+id/custom_comment_text"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="username"
            android:textColor="#00695c"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/custom_comment_time"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:gravity="right"
            android:text="5:45"
            android:textColor="#00796b"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/custom_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_comment_text"
            android:layout_marginTop="0dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Just gona stand there and ..."
            android:textColor="#00796b"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>